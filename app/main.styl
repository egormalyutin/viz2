html, body
	font-family font-family PT Sans, Open Sans, Arial, -apple-system, BlinkMacSystemFont, Roboto, Helvetica Neue, Calibri, Helvetica, sans-serif
	font-size 1em
	margin 0
	padding 0

table
	table-layout fixed
	width 100%
	margin 0
	padding 0
	position relative
	width auto
	border-collapse collapse

td, th
	padding 0
	margin 0
	text-align center
	position relative
	padding-left  0.5em
	padding-right 0.5em

td:not(:last-child), th:not(:last-child)
	border-right 1px solid rgba(0,0,0, 0.3)

th
	background white
	z-index 2
	max-width 15em

td
	white-space nowrap
	height 25px
	position relative
	z-index 1

.table-root
	display flex
	flex-direction row
	justify-content center
	height 50vh
	overflow scroll
	margin 0
	padding 0

.table
	margin 0
	padding 0
	position relative
	
#root
	margin 0
	padding 0

.main
	padding 0
	margin 0
	width 100%
	height 100%

.calc-line-size
	opacity 0

.plots
	display flex
	flex-direction row
	justify-content center
	align-items center
	height 50vh
	overflow-y hidden
	overflow-x scroll

.chart-container
	position relative
	width 23vw
	height 45vh
